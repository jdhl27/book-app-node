  article.message.is-primary
  .message-header
    p Estas en el libro #{book.name}, pronto mas informaci√≥n.

  .container
    .columns
      .column.is-one-third
        if(book.image)
          img(src='http://localhost:4040/#{book.image}' alt='Libro')
        else
          img(src="https://www.psicoactiva.com/wp-content/uploads/puzzleclopedia/libro-abierto.png")
      .column.is-one-third
        h1.title #{book.name}
        h2.subtitle #{book.author}
        h3.subtitle #{book.stock} libros disponibles
        if book.state == "Disponible" || book.state == "disponible"
          span.tag.is-success Disponible
        else
          span.tag.is-danger No disponible

